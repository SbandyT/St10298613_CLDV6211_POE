@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Khumalo Craft Home</title>
    <style>
        body {
            background-color: #f0eada; 
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            text-align: center;
            margin-bottom: 40px;
        }

            .header h1 {
                color: #4f3222; 
            }

        .content {
            background-color: #f9f5f1; 
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); 
        }

            .content p {
                color: #6d5042; 
            }

        .footer {
            text-align: center;
            margin-top: 40px;
            color: #6d5042; 
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="header">
            <h1>Welcome to Khumalo Craft</h1>
        </div>

        <div class="content">
            <p>Discover unique handcrafted products from artisans around the world.</p>
            <p>Explore our collection and find the perfect piece to add to your home or gift to a loved one.</p>
        </div>

        <div class="footer">
            <p>&copy; 2024 Khumalo Craft. All rights reserved.</p>
        </div>
    </div>

</body>
</html>